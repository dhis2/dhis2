<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">]
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.program.ProgramIndicatorGroupSet" table="programindicatorgroupset">

    <cache usage="read-write" />

    <id name="id" column="programindicatorgroupsetid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="false" length="230" />

    <property name="description" type="text" />

    <property name="compulsory" />

    <list name="members" table="programindicatorgroupsetmembers">
      <cache usage="read-write" />
      <key column="programindicatorgroupsetid" foreign-key="fk_programindicatorgroupsetmembers_programindicatorgroupsetid" />
      <list-index column="sort_order" base="1" />
      <many-to-many class="org.hisp.dhis.program.ProgramIndicatorGroup" column="programindicatorgroupid" unique="true"
        foreign-key="fk_programindicatorgroupset_programindicatorgroupid" />
    </list>

    <!-- Object Translation -->
    <set name="translations" table="programindicatorgroupsettranslations" cascade="delete-orphan">
      <cache usage="read-write" />
      <key column="programindicatorgroupsetid" foreign-key="fk_objecttranslation_programindicatorgroupsetid" />

      <many-to-many class="org.hisp.dhis.translation.ObjectTranslation">
        <column name="objecttranslationid" unique="true" />
        <filter name="locale" condition="locale = :locale" />
      </many-to-many>
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_programindicatorgroupset_userid" />

    <property name="publicAccess" length="8" />

    <set name="userGroupAccesses" table="programindicatorgroupsetusergroupaccesses">
      <cache usage="read-write" />
      <key column="programindicatorgroupsetid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" column="usergroupaccessid" unique="true" />
    </set>

  </class>

  <filter-def name="locale">
    <filter-param name="locale" type="string" />
  </filter-def>

</hibernate-mapping>

